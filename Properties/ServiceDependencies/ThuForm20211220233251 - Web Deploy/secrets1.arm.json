{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "DefaultResourceGroup-CUS",
      "metadata": {
        "_parameterType": "resourceGroup",
        "description": "資源的資源群組名稱。建議您將資源放在相同的資源群組下，以改進追蹤。"
      }
    },
    "resourceGroupLocation": {
      "type": "string",
      "defaultValue": "centralus",
      "metadata": {
        "_parameterType": "location",
        "description": "資源群組的位置。資源群組的位置可能與資源不同。"
      }
    },
    "resourceLocation": {
      "type": "string",
      "defaultValue": "[parameters('resourceGroupLocation')]",
      "metadata": {
        "_parameterType": "location",
        "description": "資源的位置。根據預設會使用資源群組的位置，除非該位置不支援資源提供者。"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "name": "[parameters('resourceGroupName')]",
      "location": "[parameters('resourceGroupLocation')]",
      "apiVersion": "2019-10-01"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[concat(parameters('resourceGroupName'), 'Deployment', uniqueString(concat('ThuFormvault', subscription().subscriptionId)))]",
      "resourceGroup": "[parameters('resourceGroupName')]",
      "apiVersion": "2019-10-01",
      "dependsOn": [
        "[parameters('resourceGroupName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "name": "ThuFormvault",
              "type": "Microsoft.KeyVault/vaults",
              "location": "[parameters('resourceLocation')]",
              "properties": {
                "sku": {
                  "family": "A",
                  "name": "Standard"
                },
                "tenantId": "751ad7c2-7fd9-4047-a654-a64faa8e26df",
                "accessPolicies": [],
                "enabledForDeployment": true,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true
              },
              "apiVersion": "2016-10-01"
            }
          ]
        }
      }
    }
  ],
  "metadata": {
    "_dependencyType": "secrets.keyVault"
  }
}