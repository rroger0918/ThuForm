@model IEnumerable<ThuForm.Models.RegistForm>
@{
    ViewBag.Title = "Home Page";
}

<section id="home-page">
    <div class="container-fluid home-bg">

        <div class="row">

            <div class="col-sm-12 col-md-12 text-center home-page">

                <div class="main-logo">
                    <img src="~/images/whitethu.png" width="300">
                </div>

                <div class=" col-sm-12">
                    <h1>昂哥 AI 研討會</h1>
                </div>

                <!-- COUNTDOWN -->
                <div>
                    <h1 id="demo">

                        <!-- /COUNTDOWN -->
                    </h1>
                </div>

            </div>
        </div>
    </div>
</section>
<!-- /#home-page -->

<!-- /#service-page -->
<!-- /#about-page -->



<section id="contact-page ">

    <div class="container ">
        <div class="row " style=" padding-top: 40px; padding-bottom: 40px; ">
            <div class="col-md-12 ">                
                    <div class="contact-form  ">
                        <div class="row align-items-center">
                            <div class="col-sm-10 your-message col-sm-offset-1 ">
                                <div class="form-group">
                                    @if (Model.Count() == 0)
                                    {
                                        <div class="alert" alert-info>
                                            <strong>無紀錄</strong>
                                        </div>
                                    }
                                    else
                                    {
                                        <h2>當前成員</h2>
                                        <ul class="nav navbar-nav">
                                            <li>@Html.ActionLink("管理員登出", "Logout", "Home")</li>
                                        </ul>


                                        <table class="table">
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.DataID)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Id)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Total)
                                                </th>
                                                <th></th>
                                            </tr>

                                            @foreach (var item in Model)
                                            {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DataID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Total)
                                            </td>

                                            <td>
                                                <a href="@Url.Action("Edit")?DataId=@item.DataID" class="btn btn-warning">編輯</a>
                                                <a href="@Url.Action("Delete")?DataId=@item.DataID"
                                                   class="btn btn-danger"
                                                   onclick="return confirm('確定要刪除序號 @item.DataID - @item.Name 的記錄嗎？');">
                                                    刪除
                                                </a>
                                            </td>
                                        </tr>

                                            }
                                        </table>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</section>
}
