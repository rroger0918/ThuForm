@model IEnumerable<ThuForm.Models.RegistForm>

@{
    ViewBag.Title = "Login";
}


<!-- /#home-page -->

<section id="service-page">

    <div class="container">
        <div class="row ">

            <form method="post" action="@Url.Action("Login")">
                <div class="panel panel-primary col-3">
                    <div class="panel-heading">管理員登入</div>
                    <div class="panel-body ">
                        <p>
                            帳號：
                            <input type="text" class="form-control" name="txtUid" required />
                        </p>
                        <p>
                            密碼：
                            <input type="password" class="form-control" name="txtPwd" required />
                        </p>
                        <p>
                            <input type="submit" class="btn btn-primary" value="確定" />
                        </p>
                        <p class="text-danger">@ViewBag.Err</p>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- /.container -->
</section>
<!-- /#service-page -->



